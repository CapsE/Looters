<html>
    <head>
        <script src="jquery.min.js"></script>
        <script src="base.js"></script>
        <script src="user.js"></script>
        <script src="init.js"></script>
        <script src="drag_and_drop.js"></script>
        <script src="key_events.js"></script>
        <link rel="stylesheet" type="text/css" href="style.css">
        <link rel="stylesheet" href="QUnit/qunit-1.18.0.css">
    </head>
    <body onload="init()" onkeydown="keyDown(event)" onkeyup="keyUp(event)">
        <div id="main" ondrop="drop(event)" ondragover="allowDrop(event)" style="width:100%; height:100%;background:#EEEEFF;z-index:-1000;"></div>
        <div class="control" id="control">
            <img class="control_button" src="Icons/Delete.png" onclick="controlDelete()"></img>   
        </div>
        <div id="loginHolder" style="background-color:rgba(0,0,0,0.2); position:absolute; top:0px; left:0px; width:100%; height:100%; padding-top:200px;text-align: center; z-index:1000;">
            <div id="login" style="background-color:white; display:inline-block; padding:50px;">
                <p>Name</p><input id="name" type="text" value=""></input>
                <p>Password</p><input id="password" type="password" value=""></input><br/><br/>
                <Button onclick="login()">LogIn</Button>
            </div>
        </div>
        <% if @test %>
            <div id="qunit"></div>
            <div id="qunit-fixture"></div>

            <script src="QUnit/qunit-1.18.0.js"></script>
            <script src="QUnit/tests.js"></script>
        <% end %>
    </body>
</html>